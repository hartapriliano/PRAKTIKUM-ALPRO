gaji_per_jam = int (input("Gaji per jam yang Anda inginkan: "))
jumlah_jam_kerja = int(input("Jumlah jam kerja yang akan dilakukan dalam 1 minggu: "))

lama_kerja = 5
persen_pajak = 0.14
persen_belanja_baju_aksesoris = 0.1
persen_beli_alat_tulis = 0.01
persen_disedekahkan = 0.25
persen_yatim = 0.3

sebelum_bayar_pajak = gaji_per_jam * jumlah_jam_kerja * lama_kerja
pajak = sebelum_bayar_pajak * persen_pajak
setelah_bayar_pajak = sebelum_bayar_pajak - pajak
beli_baju_aksesoris = setelah_bayar_pajak * persen_belanja_baju_aksesoris
beli_alat_tulis = setelah_bayar_pajak * persen_beli_alat_tulis
sisa_uang = setelah_bayar_pajak - beli_alat_tulis - beli_baju_aksesoris
uang_sedekah = sisa_uang - persen_disedekahkan
uang_yatim = uang_sedekah * persen_yatim
uang_dhuafa = uang_sedekah - uang_yatim

print ("Pendapatan Budi selama libur musim panas sebelum melakukan pembayaran pajak: Rp {:.2f}".format(sebelum_bayar_pajak))
print ("Pendapatan Budi selama libur musim panas setelah melakukan pembayaran pajak: Rp {:.2f}".format(setelah_bayar_pajak))
print ("Jumlah uang yang akan Budi habiskan untuk membeli pakaian dan aksesoris: Rp {:.2f}".format(beli_baju_aksesoris))
print ("Jumlah uang yang akan Budi habiskan untuk membeli alat tulis: Rp {:.2f}".format(beli_alat_tulis))
print ("Jumlah uang yang akan Budi sedekahkan: Rp {:.2f}".format(uang_sedekah))
print ("Jumlah uang yang akan diterima anak yatim: Rp {:.2f}".format(uang_yatim))
print ("Jumlah uang yang akan diterima kaum dhuafa: Rp {:.2f}".format(uang_dhuafa))
